<!--pages/detail/reg/reg.wxml-->
<view class="container">
  <view class="top">
    <text class="text1">1.请输入手机号></text>
    <text class="text2">2.输入验证码></text>
    <text class="text3">3.设置密码</text>
  </view>
  <view wx:if="true" class="middle">
    <input placeholder='输入您的手机号' type="number" maxlength="11" bindinput="phoneVal"></input>
  </view>
  <view class="bottom">
    <button bindtap="sendMsg">获取验证码</button>
  </view>
</view>
