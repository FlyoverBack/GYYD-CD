/**index.wxss**/
.container{
  background:#FAFAFA;
}
.index_head{
  width:100%;
  height:auto;
  margin:0 auto;
}
.index_head .swiper_image{
  width:100%;
  height:100%; 
  display:inline-block;
}
.index_list{
  width:100%;
  height:auto;
}
.list_top{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  line-height:100rpx;
}
.list_top .list_title{
  width:65%;
  height:100%;
  font-size:30rpx;
  color:#333333;
  margin-left:5%;
}
.list_top .picker{
  width:30%;
  height:100%; 
}
.date_list{
  width:90%;
  height:100%;
  display:flex;
  flex-direction:row;
  align-items:center;
}
.list_top .list_date{
  width:80%;
  height:100%;
  font-size:24rpx;
  color:#666666;
}
.list_top image{
  display:block;
  width:23rpx;
  height:11rpx;
  margin-left:5%;
}
.list_bottom{
  width:90%;
  margin:10rpx auto;
}
.list_item{
  width:100%;
  height:268rpx;
  background:#FFFFFF;
  margin-bottom:20rpx;
}
.list_item .list_items{
  width:100%;
  height:25%;
  display:flex;
  flex-direction:row;
  line-height:67rpx;
  align-items:center;
}
.list_item .items_top .bac{
  width:5%;
  height:50%;
  font-size:22rpx;
  color:#FFFFFF;
  background:#EE6F2D;
  line-height:33rpx;
  text-align:center;
}

.list_item .items_top text:nth-child(2){
  width:80%;
  height:100%;
  font-size:30rpx;
  color:#333333;
}
.list_item .items_top text:nth-child(3){
  width:15%;
  height:100%;
  font-size:30rpx;
  color:#EC7732;
}
.list_item .items_middle:first-child{
  width:70%;
  height:100%;
}
.list_item .items_middle:last-child{
  width:30%;
  height:100%;
}