/* pages/user/user/user.wxss */
.container{
  background:#FFFFFF;
}
.top{
  width: 100%;
  height: 228rpx;
  display: flex;
  flex-direction: row;
  padding-top:20rpx; 
  align-items:center;
}
.top .header_left{
  width:25%;
  height:80%;
  margin-left:5%;
  display:flex;
  align-items:center;
}
.top .header_left image{
  display:block;
  width:150rpx;
  height:150rpx;
}
.top .header_right{
  width:65%;
  height:80%;
  display:flex;
  flex-direction:column;
}
.top .header_right .item{
  width:100%;
  height:33%;
  display:flex;
  align-items:center;
}
.top .header_right .title{
  color:#333333;
  font-size:30rpx;
}
.top .header_right text{
  font-size:22rpx;
  line-height:22rpx;
  color:#666666;
}
.top .header_right .phone{
  width:100%;
  display:flex;
  flex-direction:row;
}
.top .header_right .phone .phone_item{
  width:83%;
}
.top .header_right .phone .detail{
  display:block;
  text-align:right;
}
.top .header_right image{
  display:block;
  width:20rpx;
  height:20rpx;
}
/* middle */
.middle{
  width:95%;
  height:275rpx;
  margin:0 auto;
  background-image:url('https://appsjk-1258453917.cos.ap-beijing.myqcloud.com/temp/background.png');
  border-radius:50rpx;
  margin-top:20rpx;
}
.middle_items{
  width:100%;
  display:flex;
  flex-direction:row;
  align-items:center;
  line-height:137rpx;
}
.items_top{
  height:40%;
}
.items_middle{
  height:60%;
}
.items_top text:nth-child(1){
  width:70%;
  height:100%;
  font-size:30rpx;
  color:#FFFFFF;
  margin-left:10%;
}
.items_top text:nth-child(2){
  width:20%;
  height:100%;
  font-size:22rpx;
  color:#FFFFFF;
}
.items_middle text:nth-child(1){
  width:40%;
  height:100%;
  font-size:26rpx;
  color:#FFFFFF;
  margin-left:10%;
}
.items_middle text:nth-child(2){
  width:60%;
  height:100%;
  font-size:60rpx;
  color:#FFFFFF;
}
/* 底部 */
.bottom{
  display:flex;
  flex-direction:column;
  margin-top:30rpx;
}
.list_item{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  padding-top:10rpx;
  border-bottom:1rpx solid #EEEEEE;
  align-items:center;
}
.list_item text{
  width:70%;
  height:70rpx;
  line-height:70rpx;
  font-size:28rpx;
  color:#333333;
  margin-left:5%;
}
.list_item image{
  width:20rpx;
  height:20rpx;
  margin-right:5%;
}